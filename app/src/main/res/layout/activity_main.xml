<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/Sber"
            android:layout_width="303dp"
            android:layout_height="59dp"
            android:text="СберБанк"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="528dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.652"
            app:backgroundTint="#2B7E07"
            android:drawableLeft="@drawable/sberbank__2_01"

            app:layout_constraintHorizontal_bias="0.509"/>
    <Button
            android:id="@+id/Otk"
            android:layout_width="304dp"
            android:layout_height="58dp"
            android:text="Открытие"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:backgroundTint="#044D7E"
            android:drawableLeft="@drawable/otkr_logo_bank_vert"

            app:layout_constraintTop_toBottomOf="@+id/Sber"
            app:layout_constraintBottom_toTopOf="@+id/Alpha" app:layout_constraintVertical_bias="0.459"/>
    <Button
            android:id="@+id/Alpha"
            android:layout_width="309dp"
            android:layout_height="57dp"
            android:text="Альфа-банк"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.474" app:layout_constraintHorizontal_bias="0.48"
            android:background="#FDFBFB" app:backgroundTint="#800707"
            android:drawableLeft="@drawable/alfabank_logo"
    />
    <Button
            android:id="@+id/VTB"
            android:layout_width="308dp"
            android:layout_height="57dp"
            android:text="ВТБ"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.514" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.646" app:layout_constraintEnd_toEndOf="parent"
            app:backgroundTint="#0939C6" android:drawableLeft="@drawable/vtb__full_color"/>
    <Button
            android:id="@+id/Mail"
            android:layout_width="312dp"
            android:layout_height="57dp"
            android:text="Почта банк"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.494" app:layout_constraintVertical_bias="0.805"
            app:backgroundTint="#1447E1" android:drawableLeft="@drawable/logo_pochta_bank"/>
    <TextView
            android:text="Выберите банк"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/Sber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.32"
            android:textSize="30sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>