<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/Sber"
            android:layout_width="303dp"
            android:layout_height="59dp"
            android:text="СберБанк, 10.6%"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="528dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.75"
            app:backgroundTint="#2B7E07"
            android:drawableLeft="@drawable/sberbank__2_01"

            app:layout_constraintHorizontal_bias="0.509"/>
    <Button
            android:id="@+id/Otk"
            android:layout_width="304dp"
            android:layout_height="58dp"
            android:text="Открытие, 7.8%"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.514"
            app:backgroundTint="#044D7E"
            android:drawableLeft="@drawable/otkr_logo_bank_vert"

            app:layout_constraintTop_toBottomOf="@+id/Sber"
            android:layout_marginTop="40dp"/>
    <Button
            android:id="@+id/Alpha"
            android:layout_width="309dp"
            android:layout_height="57dp"
            android:text="Альфа-банк, 5.3%"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#FDFBFB" app:backgroundTint="#800707"
            android:drawableLeft="@drawable/alfabank_logo"
            android:layout_marginBottom="364dp" app:layout_constraintHorizontal_bias="0.48"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/Otk"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:id="@+id/VTB"
            android:layout_width="308dp"
            android:layout_height="57dp"
            android:text="ВТБ, 8.6%"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.495" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:backgroundTint="#0939C6" android:drawableLeft="@drawable/vtb__full_color"
            android:layout_marginBottom="276dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/Alpha"/>
    <Button
            android:id="@+id/Mail"
            android:layout_width="312dp"
            android:layout_height="57dp"
            android:text="Почта банк, 2%"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:backgroundTint="#1447E1" android:drawableLeft="@drawable/logo_pochta_bank"
            android:layout_marginBottom="168dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/VTB"/>
    <TextView
            android:text="Выберите банк"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/Sber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.32"
            android:textSize="30sp" android:textColor="#000000"/>

</androidx.constraintlayout.widget.ConstraintLayout>